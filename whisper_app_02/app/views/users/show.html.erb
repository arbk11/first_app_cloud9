<div class="main user-show">
  <div class="container">
    <div class="user">
      <% if @user.image_name %>
      <img src="<%= "/user_images/#{@user.image_name}" %>">
      <h2><%= @user.name %></h2>
      <% end %>
      <p><%= @user.email %></p>
      <% if @current_user.id == @user.id %>
        <%= link_to("編集","/users/#{@user.id}/edit")%>
      <% end %>
    </div>
  </div>
</div>